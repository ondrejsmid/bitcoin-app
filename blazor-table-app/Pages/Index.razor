@page "/"
@inject BlazorTableApp.Services.DataService DataService

<h2>Live Data</h2>

<button @onclick="FetchData">Refresh</button>

@if (loading)
{
    <p>Loading...</p>
}
else if (items.Count == 0)
{
    <p>No data available</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IReadOnlyList<BlazorTableApp.Models.ValueItem> items = Array.Empty<BlazorTableApp.Models.ValueItem>();
    private bool loading = false;

    protected override async Task OnInitializedAsync()
    {
        await FetchData();
    }

    private async Task FetchData()
    {
        loading = true;
        await DataService.FetchFromCoinDeskAsync();
        items = DataService.GetAll();
        loading = false;
    }
}
