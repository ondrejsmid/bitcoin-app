@page "/stored"
@using System.Net.Http.Json
@inject HttpClient Http

<h2>Saved Data</h2>
<p>This page shows rows stored in the database (Key / Value).</p>
<button @onclick="RefreshAsync">Refresh</button>

<table class="table">
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
            <th>Created At (UTC)</th>
        </tr>
    </thead>
    <tbody>
        @if (rows is null)
        {
            <tr><td colspan="3">Loading...</td></tr>
        }
        else if (!rows.Any())
        {
            <tr><td colspan="3">No rows found.</td></tr>
        }
        else
        {
            @foreach (var r in rows)
            {
                <tr>
                    <td>@r.Key</td>
                    <td>@r.Value</td>
                    <td>@r.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    private List<BitcoinDataRow>? rows;

    private record BitcoinDataRow(int Id, string Key, string Value, DateTime CreatedAt);

    protected override async Task OnInitializedAsync()
    {
        await RefreshAsync();
    }

    private async Task RefreshAsync()
    {
        try
        {
            var url = "http://localhost:5000/api/bitcoindata";
            var result = await Http.GetFromJsonAsync<List<BitcoinDataRow>?>(url);
            rows = result ?? new List<BitcoinDataRow>();
            StateHasChanged();
        }
        catch
        {
            rows = new List<BitcoinDataRow>();
        }
    }
}
