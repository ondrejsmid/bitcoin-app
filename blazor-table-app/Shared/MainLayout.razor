@using Microsoft.AspNetCore.Components.Routing
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
            <h3>Blazor Table App</h3>
            <nav>
                <NavLink href="/" class="nav-link" Match="NavLinkMatch.All">Live Data</NavLink>
                <br />
                <NavLink href="/stored" class="nav-link">Saved Data</NavLink>
            </nav>
        </div>
    <div class="main">
        @Body
    </div>
</div>

<style>
  .page { display:flex; height:100vh; }
  .sidebar { width:220px; padding:1rem; background:#f5f5f5; }
  .main { flex:1; padding:1rem; overflow:auto; }
  table { width:100%; border-collapse:collapse; }
  th, td { padding:0.4rem; border:1px solid #ddd; text-align:left; }
    .nav-link { display:inline-block; margin:0.25rem 0; padding:0.4rem 0.6rem; color:#333; text-decoration:none; border-radius:4px; }
    .nav-link.active { background:#0078d4; color:white; }
</style>
